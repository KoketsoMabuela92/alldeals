# AllDeals Environment Variables Template
# Copy this file to .env.production and update with your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Get this from your Axxess hosting database settings
DATABASE_URL="postgresql://username:password@host:port/database_name"
# Alternative for MySQL: DATABASE_URL="mysql://username:password@host:port/database_name"

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
NODE_ENV=production
# Replace with your actual subdomain
NEXT_PUBLIC_APP_URL="https://alldeals.yourdomain.com"

# =============================================================================
# PAYFAST CONFIGURATION (PRODUCTION)
# =============================================================================
# Get these from your PayFast merchant account
PAYFAST_MERCHANT_ID="your-production-merchant-id"
PAYFAST_MERCHANT_KEY="your-production-merchant-key"
PAYFAST_PASSPHRASE="your-production-passphrase"

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# Generate secure random strings for these
JWT_SECRET="generate-a-secure-random-string-here"
NEXTAUTH_SECRET="generate-another-secure-random-string-here"
NEXTAUTH_URL="https://alldeals.yourdomain.com"

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
# For order confirmations and notifications
SMTP_HOST="your-smtp-host"
SMTP_PORT=587
SMTP_USER="your-email@yourdomain.com"
SMTP_PASS="your-email-password"
FROM_EMAIL="noreply@yourdomain.com"

# =============================================================================
# ANALYTICS & MONITORING (OPTIONAL)
# =============================================================================
GOOGLE_ANALYTICS_ID="your-ga-tracking-id"

# =============================================================================
# ADMIN SETTINGS
# =============================================================================
# Default admin credentials (change after first login)
DEFAULT_ADMIN_EMAIL="admin@yourdomain.com"
DEFAULT_ADMIN_PASSWORD="change-this-password"

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REGISTRATION=true
ENABLE_GUEST_CHECKOUT=false
MAINTENANCE_MODE=false
