# Production Environment Variables for AllDeals
# Replace these values with your actual production settings

# Database Configuration
DATABASE_URL="your-production-database-url"
# Example: DATABASE_URL="postgresql://username:password@host:port/database"
# Or for MySQL: DATABASE_URL="mysql://username:password@host:port/database"

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL="https://alldeals.yourdomain.com"

# PayFast Configuration (Production)
PAYFAST_MERCHANT_ID="your-production-merchant-id"
PAYFAST_MERCHANT_KEY="your-production-merchant-key"
PAYFAST_PASSPHRASE="your-production-passphrase"

# JWT Secret for Authentication
JWT_SECRET="weakpassword"

# Email Configuration (Optional - for notifications)
SMTP_HOST="your-smtp-host"
SMTP_PORT=587
SMTP_USER="your-email@yourdomain.com"
SMTP_PASS="your-email-password"

# Analytics & Monitoring (Optional)
GOOGLE_ANALYTICS_ID="your-ga-id"

# Security Settings
NEXTAUTH_SECRET="weakpassword"
NEXTAUTH_URL="https://alldeals.yourdomain.com"
